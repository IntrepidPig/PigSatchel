<Window x:Class="FileClient2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileClient2"
        mc:Ignorable="d"
        Title="File Client" Height="444" Width="698">
	<Grid>
		<TextBox x:Name="clientsBox" HorizontalAlignment="Left" Height="365" Margin="10,10,0,0" TextWrapping="Wrap" Text="Clients:" VerticalAlignment="Top" Width="131" IsReadOnly="True"/>
		<TextBox x:Name="commandBox" HorizontalAlignment="Left" Height="23" Margin="10,380,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="547"/>
		<Button x:Name="commandButton" Content="Go" HorizontalAlignment="Left" Margin="562,379,0,0" VerticalAlignment="Top" Width="118" Height="24" Click="ExecuteCommand"/>
		<TextBox x:Name="outputBox" HorizontalAlignment="Left" Height="364" Margin="146,10,0,0" TextWrapping="Wrap" Text="File Client v0.1" VerticalAlignment="Top" Width="534" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextChanged="OutputChanged"/>

	</Grid>
</Window>